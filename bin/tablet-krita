#!/bin/sh

stylus="`xsetwacom list devices | grep 'stylus' | sed 's/.*id: \([0-9][0-9]*\).*/\1/'`"
pad="`xsetwacom list devices | grep 'Pad pad' | sed 's/.*id: \([0-9][0-9]*\).*/\1/'`"

xsetwacom set $stylus maptooutput 1920x1080+0+0
xsetwacom set $stylus button 2 button 3
xsetwacom set $stylus button 3 button 3
xsetwacom set $pad button 1 "key ctrl alt 1"
xsetwacom set $pad button 2 "key ctrl alt 2"
xsetwacom set $pad button 3 "key ctrl alt 3"
xsetwacom set $pad button 8 "key ctrl alt 4"
xsetwacom set $pad button 9 "key ctrl z"
xsetwacom set $pad button 10 "key ctrl y"
